@page
@model BookListrazor.Pages.BookList.UpsertModel
@{
}
<br />
<h2 class="text-info">@(Model.book.Id!=0? "Edit":"Create") Book</h2>
<br />
<div class="container border" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All">

        </div>
        @if (Model.book.Id != 0)
        {
            <input type="hidden" asp-for="book.Id" />
        }
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="book.Name"></label><sup style="color:red;">*</sup>
            </div>
            <div class="col-6">
                <input asp-for="book.Name" class="form-control" />
            </div>
            <span asp-validation-for="book.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="book.Author"></label><sup style="color:red;">*</sup>
            </div>
            <div class="col-6">
                <input asp-for="book.Author" class="form-control" />
            </div>
            <span asp-validation-for="book.Author" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="book.ISBN"></label><sup style="color:red;">*</sup>
            </div>
            <div class="col-6">
                <input asp-for="book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="book.ISBN" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="@(Model.book.Id!=0? "Update":"Create")" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to page</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}